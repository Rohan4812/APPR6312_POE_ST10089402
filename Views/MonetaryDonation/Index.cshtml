@model IEnumerable<APPR6312_POE.Models.MonetaryDon>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/sketch.css" />
<style>
    body {
        background-color: orange;
    }
</style>



<div class="text-center">
    <h1>Monetary Data <i class="bi bi-currency-dollar"></i></h1>
    <br />
    

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Amount)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Datedata)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)

                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Datedata)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

